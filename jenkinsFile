pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                    sh 'mvn clean package'
            }
        }
         stage('Run') {
            steps {
                 sh 'sudo nohup java -jar target/jenkins-closing-task-0.0.1-SNAPSHOT.jar &'
            }
          }
     }

    post{
     success {
        script {
          slackSend(
            color: "#00FF00",
            channel: "jenkins-final-task-notifacation",
            message: "Status: SUCCESS"
          )
        }
    }      
}
