pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                    sh 'mvn clean package'
            }
        }
         stage('Run') {
            steps {
                 sh 'sudo nohup java -jar target/jenkins-closing-task-0.0.1-SNAPSHOT.jar &'
            }
          }
     }

    post{
        success{
curl -X POST -H 'Content-type: application/json' --data '{"text":"build success!"}' https://hooks.slack.com/services/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     
}
    
    }      
}
